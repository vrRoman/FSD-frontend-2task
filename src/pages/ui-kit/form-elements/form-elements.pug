extends ../../../templates/ui-kit


block vars
    - const name = 'form-elements'

block content
    -
        const facilitiesDropdownItems =
                {
                    item1: {
                        name: 'Спальни',
                        value: '2'
                    },
                    item2: {
                        name: 'Кровати',
                        value: '2'
                    },
                    item3: {
                        name: 'Ванные комнаты',
                        value: '0'
                    }
                }

        const listCheckboxes =
                [
                    {
                        name: 'Завтрак',
                        checked: false
                    },
                    {
                        name: 'Письменный стол',
                        checked: true
                    },
                    {
                        name: 'Стул для кормления',
                        checked: true
                    },
                    {
                        name: 'Кроватка',
                        checked: true
                    },
                    {
                        name: 'Телевизор',
                        checked: false
                    },
                    {
                        name: 'Шампунь',
                        checked: false
                    },
                ]

    .container
        .container__column-1
            .fields
                .fields__field
                    +text-field("Email", "email", "Text field", "default", "")
                .fields__field
                    +text-field("This is pretty awesome", "text", "Text field", "hover / focus", 'text-field_active',
                    false, "This is pretty awesome")
                .fields__field
                    +dropdown("Сколько гостей", "Dropdown", "popup",
                        {
                            "className": "",
                            "items": facilitiesDropdownItems,
                        },
                        "", "default")
                .fields__field
                    +text-field("ДД.ММ.ГГГГ", "text", "Masked text field", "default", 'masked-date')
                .fields__field
                    +datepicker(true, ["Date dropdown", "Date dropdown"], ['', '19.08.2019'])
                .fields__field
                    +datepicker(false, ["Filter date dropdown"], ["19 авг - 23 авг"])
                .fields__field
                    +text-field("Email", "email", "subscription text field", "", "subscription-text-field", true)


        .container__column-2
            .switches
                .switches__switch
                    +checkbox-buttons('checkbox buttons',
                        [
                            {
                                name: 'Можно курить',
                                checked: false
                            },
                            {
                                name: 'Можно с питомцами',
                                checked: true
                            },
                            {
                                name: 'Можно пригласить гостей<br>(до 10 человек)',
                                checked: true
                            }
                        ])
                .switches__switch
                    +radio-buttons('Radio buttons', ['Мужчина', 'Женщина'], 'gender')

                .switches__switch
                    +toggle-buttons('Toggle', [
                        {
                            name: 'Получать спецпредложения',
                            checked: true
                        },
                        {
                            name: 'Получать спецпредложения',
                            checked: false
                        }
                    ])

                .switches__switch.like-buttons
                    h3.like-buttons__title Like button
                    +like-button(2, false)
                    +like-button(12, true)

                .switches__switch.rate-buttons
                    h3.rate-buttons__title Rate button
                    +rate-button(4)
                    +rate-button(5)


        .container__column-3
            .other-elems
                .other-elems__slider
                    +range-slider('Range slider')

                .other-elems__buttons
                    h3.other-elems__title Buttons
                    .default-buttons
                        +button('click me', false)
                        +button('click me', 'button_default-hover')
                        +button('click me', 'button_secondary')
                        +button('click me', 'button_secondary-hover')
                    .icon-link-buttons
                        +button('click me', 'button_icon-link-primary')
                        +button('click me', 'button_icon-link-secondary')
                    .extended-button
                        +button('Перейти к оплате', 'button_extended')

                .other-elems__pagination
                    h3.other-elems__title Pagination
                    +pagination('1 - 12 из 100+ вариантов аренды')


    .container.container_dropdowns
        .container__column-1
            .facilities-dropdowns
                .facilities-dropdowns__dropdown
                    +dropdown('2 спальни, 2 кровати...', 'Dropdown', 'popup', {
                        className: '',
                        items: facilitiesDropdownItems,
                    }, 'facilities-dropdown dropdown_small ', 'default')
                .facilities-dropdowns__dropdown
                    +dropdown('2 спальни, 2 кровати...', 'Dropdown', 'popup', {
                        className: 'items-popup_small',
                        items: facilitiesDropdownItems,
                    }, 'facilities-dropdown dropdown_small dropdown_expanded', 'expanded')

        .container__column-2
            .guests-dropdowns
                .guests-dropdowns__dropdown
                    +dropdown('Сколько гостей', 'Dropdown', 'popup', {
                        className: '',
                        items: {
                            item1: {
                                name: 'Взрослые',
                                value: '0'
                            },
                            item2: {
                                name: 'Дети',
                                value: '0'
                            },
                            item3: {
                                name: 'Младенцы',
                                value: '0'
                            }
                        }
                    }, 'dropdown_expanded')
        .container__column-3
            .guests-dropdowns
                .guests-dropdowns__dropdown
                    +dropdown('3 гостя', 'Dropdown', 'popup', {
                        className: '',
                        items: {
                            item1: {
                                name: 'Взрослые',
                                value: '2'
                            },
                            item2: {
                                name: 'Дети',
                                value: '1'
                            },
                            item3: {
                                name: 'Младенцы',
                                value: '0'
                            }
                        }
                    }, 'dropdown_expanded')


    .container.container_lists
        .container__column-1
            .expandable-lists
                .expandable-lists__list
                    +list("Expandable checkbox list", listCheckboxes, false)
                .expandable-lists__list
                    +list("Expandable checkbox list", listCheckboxes, 'list_expanded')

        .container__column-2
            .rich-checkboxes-buttons
                +checkbox-buttons('Rich checkbox buttons', [
                    {
                        name: 'Широкий коридор',
                        description: 'Ширина коридоров в номере<br>не менее 91 см.',
                        checked: false
                    },
                    {
                        name: 'Помощник для инвалидов',
                        description: 'На 1 этаже вас встретит специалист<br>и проводит до номера.',
                        checked: false
                    }
                ], true)

        .container__column-3
            .bullet-lists
                +bullet-list('Bullet list',
                    ['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00,<br>а выезд ' +
                    'до 12:00'])



    .container.container_last
        .container__column-1
            .icon-text-lists
                +icon-text-list([
                    {
                        name: 'Комфорт',
                        description: 'Шумопоглощающие стены',
                        iconName: 'insert_emoticon'
                    },
                    {
                        name: 'Удобство',
                        description: 'Окно в каждой из спален',
                        iconName: 'location_city'
                    }
                ])

        .container__column-2
            .comment
                +comment(
                    {
                        name: 'Мурад Сарафанов',
                        avatarLink: 'images/avatar_murad.png'
                    },
                    {
                        likeNum: 12,
                        active: true
                    },
                    {
                        time: '5 дней назад',
                        text: 'Великолепный матрас на кровати в основной спальне! ' +
                            'А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. ' +
                            'Выкрикивал комплименты повару — никто не жаловался из соседей.'
                    }
                )
