extends ../../../templates/ui-kit


block vars
    - const name = 'form-elements'

block content
    -
        const facilitiesDropdownItems =
            [
                {
                    name: 'Спальни',
                    value: '2'
                },
                {
                    name: 'Кровати',
                    value: '2'
                },
                {
                    name: 'Ванные комнаты',
                    value: '0'
                }
            ]

        const listCheckboxes =
            [
                {
                    name: 'Завтрак',
                    checked: false
                },
                {
                    name: 'Письменный стол',
                    checked: true
                },
                {
                    name: 'Стул для кормления',
                    checked: true
                },
                {
                    name: 'Кроватка',
                    checked: true
                },
                {
                    name: 'Телевизор',
                    checked: false
                },
                {
                    name: 'Шампунь',
                    checked: false
                }
            ]

    .container
        .form-elements-container
            .form-elements-container__column-1
                .fields
                    .fields__field
                        +text-field({
                          placeholder: "Email",
                          type: "email",
                          title: "Text field",
                          state: "default",
                        })
                    .fields__field
                        +text-field({
                          placeholder: "This is pretty awesome",
                          type: "text",
                          title: "Text field",
                          state: "hover / focus",
                          modName: 'active',
                          value: "This is pretty awesome",
                        })
                    .fields__field
                        +dropdown({
                            text: 'Сколько гостей',
                            title: 'Dropdown',
                            popupParams: {
                                items: facilitiesDropdownItems,
                            }
                        })
                    .fields__field
                        +text-field({
                          placeholder: "ДД.ММ.ГГГГ",
                          type: "text",
                          title: "Masked text field",
                          className: 'js-masked-date',
                        })
                    .fields__field
                        +date-picker(true, ["Date dropdown", "Date dropdown"], ['', '19.08.2019'])
                    .fields__field
                        +date-picker(false, ["Filter date dropdown"], ["19 авг - 23 авг"])
                    .fields__field
                        +text-field({
                          placeholder: "Email",
                          type: "email",
                          title: "subscription text field",
                          modName: "subscription",
                          arrow: true,
                        })


            .form-elements-container__column-2
                .switches
                    .switches__switch
                        +checkbox-buttons('checkbox buttons',
                            [
                                {
                                    name: 'Можно курить',
                                    checked: false
                                },
                                {
                                    name: 'Можно с питомцами',
                                    checked: true
                                },
                                {
                                    name: 'Можно пригласить гостей<br>(до 10 человек)',
                                    checked: true
                                }
                            ])
                    .switches__switch
                        +radio-buttons('Radio buttons', ['Мужчина', 'Женщина'], 'gender')

                    .switches__switch
                        +toggle-buttons('Toggle', [
                            {
                                name: 'Получать спецпредложения',
                                checked: true
                            },
                            {
                                name: 'Получать спецпредложения',
                                checked: false
                            }
                        ])

                    .switches__switch.like-buttons
                        h3.like-buttons__title Like button
                        .like-buttons__like-button
                            +like-button(2, false)
                        .like-buttons__like-button
                            +like-button(12, true)

                    .switches__switch.rate-buttons
                        h3.rate-buttons__title Rate button
                        .rate-buttons__rate
                            +rate-button(4)
                        .rate-buttons__rate
                            +rate-button(5)


            .form-elements-container__column-3
                .other-elems
                    .other-elems__slider
                        +range-slider('Range slider')

                    .other-elems__buttons
                        h3.other-elems__title Buttons
                        .default-buttons
                            +button('click me', false)
                            +button('click me', 'default-hover')
                            +button('click me', 'secondary')
                            +button('click me', 'secondary-hover')
                        .icon-link-buttons
                            +button('click me', 'icon-link-primary')
                            +button('click me', 'icon-link-secondary')
                        .extended-button
                            +button('Перейти к оплате', 'extended')

                    .other-elems__pagination
                        h3.other-elems__title Pagination
                        +pagination('1 &ndash; 12 из 100+ вариантов аренды')


        .form-elements-container.container_dropdowns
            .form-elements-container__column-1
                .facilities-dropdowns
                    .facilities-dropdowns__dropdown
                        +dropdown({
                            text: '2 спальни, 2 кровати...',
                            title: 'Dropdown',
                            popupParams: {
                                items: facilitiesDropdownItems,
                            },
                            modName: ['facilities', 'small'],
                            description: 'default',
                        })
                    .facilities-dropdowns__dropdown
                        +dropdown({
                            text: '2 спальни, 2 кровати...',
                            title: 'Dropdown',
                            popupParams: {
                                items: facilitiesDropdownItems,
                            },
                            modName: ['facilities', 'small', 'expanded'],
                            description: 'expanded',
                        })

            .form-elements-container__column-2
                .guests-dropdowns
                    .guests-dropdowns__dropdown
                        +dropdown({
                            text: 'Сколько гостей',
                            title: 'Dropdown',
                            popupParams: {
                                items: [
                                    {
                                        name: 'Взрослые',
                                        value: '0'
                                    },
                                    {
                                        name: 'Дети',
                                        value: '0'
                                    },
                                    {
                                        name: 'Младенцы',
                                        value: '0'
                                    }
                                ],
                            },
                            modName: 'expanded',
                        })
            .form-elements-container__column-3
                .guests-dropdowns
                    .guests-dropdowns__dropdown
                        +dropdown({
                            text: '3 гостя',
                            title: 'Dropdown',
                            popupParams: {
                                items: [
                                    {
                                        name: 'Взрослые',
                                        value: '2'
                                    },
                                    {
                                        name: 'Дети',
                                        value: '1'
                                    },
                                    {
                                        name: 'Младенцы',
                                        value: '0'
                                    }
                                ],
                            },
                            modName: 'expanded',
                        })


        .form-elements-container.container_lists
            .form-elements-container__column-1
                .expandable-lists
                    .expandable-lists__list
                        +list("Expandable checkbox list", listCheckboxes, false)
                    .expandable-lists__list
                        +list("Expandable checkbox list", listCheckboxes, 'expanded')

            .form-elements-container__column-2
                .rich-checkboxes-buttons
                    +checkbox-buttons('Rich checkbox buttons', [
                        {
                            name: 'Широкий коридор',
                            description: 'Ширина коридоров в номере<br>не менее 91 см.',
                            checked: false
                        },
                        {
                            name: 'Помощник для инвалидов',
                            description: 'На 1 этаже вас встретит специалист<br>и проводит до номера.',
                            checked: false
                        }
                    ], true)

            .form-elements-container__column-3
                .bullet-lists
                    +bullet-list('Bullet list',
                        ['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00,<br>а выезд ' +
                        'до 12:00'])



        .form-elements-container.container_last
            .form-elements-container__column-1
                .icon-text-lists
                    +icon-text-list([
                        {
                            name: 'Комфорт',
                            description: 'Шумопоглощающие стены',
                            iconName: 'insert_emoticon'
                        },
                        {
                            name: 'Удобство',
                            description: 'Окно в каждой из спален',
                            iconName: 'location_city'
                        }
                    ])

            .form-elements-container__column-2
                .comments
                    +comment(
                        {
                            name: 'Мурад Сарафанов',
                            avatarLink: 'images/avatar_murad.png'
                        },
                        {
                            likeNum: 12,
                            active: true
                        },
                        {
                            time: '5 дней назад',
                            text: 'Великолепный матрас на кровати в основной спальне! ' +
                                'А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. ' +
                                'Выкрикивал комплименты повару — никто не жаловался из соседей.'
                        }
                    )
