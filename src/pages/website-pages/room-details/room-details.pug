extends ../../../templates/website-pages

include ../../../blocks/icon-text-list/icon-text-list
include ../../../blocks/donut-chart/donut-chart
include ../../../blocks/comment/comment
include ../../../blocks/cards/booking/booking-card
include ../../../blocks/bullet-list/bullet-list


block vars
    - const title = 'Room details'
    - const fileName = 'room-details'


block content
    main.room-details
        .room-details__room-images
            .room-details__main-image
                img(src='images/room_1.jpg' alt='room-img')
            .room-details__side-images
                img(src='images/room_2.jpg' alt='room-img')
                img(src='images/room_3.jpg' alt='room-img')

        .container.room-details__container
            .room-details__info-container
                .room-details__features
                    h2.room-details__features-title Сведения о номере
                    +icon-text-list([
                        {
                            name: 'Комфорт',
                            description: 'Шумопоглощающие стены',
                            iconName: 'insert_emoticon'
                        },
                        {
                            name: 'Удобство',
                            description: 'Окно в каждой из спален',
                            iconName: 'location_city'
                        },
                        {
                            name: 'Уют',
                            description: 'Номер оснащён камином',
                            iconName: 'whatshot'
                        }
                    ])
                .room-details__expressions
                    h2.room-details__expressions-title Впечатления от номера
                    +donut-chart
                .room-details__comments
                    h2.room-details__comments-title Отзывы посетителей номера
                    span.room-details__comments-number 2 отзыва
                    +comment(
                        {
                            name: 'Мурад Сарафанов',
                            avatarLink: 'images/avatar_murad.png'
                        },
                        {
                            likeNum: 12,
                            active: true
                        },
                        {
                            time: '5 дней назад',
                            text: 'Великолепный матрас на кровати в основной спальне! ' +
                                'А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. ' +
                                'Выкрикивал комплименты повару — никто не жаловался из соседей.'
                        }
                    )
                    +comment(
                        {
                            name: 'Мурад Сарафанов',
                            avatarLink: 'images/avatar_patricia.png'
                        },
                        {
                            likeNum: 2,
                            active: false
                        },
                        {
                            time: 'Неделю назад',
                            text: 'Обслуживание на высоте! Всё аккуратно, чисто. ' +
                                'Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент'
                        }
                    )

                .room-details__rules
                    h2.room-details__rules-title Правила
                    +bullet-list(false,
                        ['Нельзя с питомцами', 'Без вечеринок и мероприятий',
                            'Время прибытия — после 13:00,<br>а выезд до 12:00'])
                .room-details__cancel
                    h2.room-details__cancel-title Отмена
                    span.room-details__cancel-text
                        | Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн.
                        | до прибытия вы получите полный возврат за вычетом сбора за услуги.


            aside.room-details__booking-card
                +booking-card(
                    {
                        number: 888,
                        type: 'люкс',
                        price: '9 990₽'
                    },
                    [
                        {
                            name: '9 990₽ х 4 суток',
                            price: '39 960₽'
                        },
                        {
                            name: 'Сбор за услуги: скидка 2 179₽',
                            price: '0₽'
                        },
                        {
                            name: 'Сбор за дополнительные<br>услуги',
                            price: '300₽'
                        }
                    ],
                    ['19.08.2019', '23.08.2019'],
                    '38 081₽'
                )
