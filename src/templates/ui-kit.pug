block vars

doctype html
html(lang="ru")
    head
        meta(charset="utf-8")
        meta(name='description' content=`UI Kit for Toxin Hotel pages (${name})`)
        meta(name='keywords' content=`toxin, ui-kit ${name}`)
        meta(name="viewport" content="initial-scale=1.0, width=device-width")

        link(rel="apple-touch-icon" sizes="180x180" href=require('@/public/favicons/apple-touch-icon.png').default)
        link(rel="icon" type="image/png" sizes="32x32" href=require('@/public/favicons/favicon-32x32.png').default)
        link(rel="icon" type="image/png" sizes="16x16" href=require('@/public/favicons/favicon-16x16.png').default)
        link(rel="manifest" href="./site.webmanifest")
        link(rel="mask-icon" href=require('@/public/favicons/safari-pinned-tab.svg').default color="#bc9cff")
        link(rel="shortcut icon" href=require('@/public/favicons/favicon.ico').default)
        meta(name="msapplication-TileColor" content="#603cba")
        meta(name="msapplication-config" content="./browserconfig.xml")
        meta(name="theme-color" content="#ffffff")

        title= name

    body
        .ui-logo-container
            img.ui-logo-container__logo(src="images/logo-icon.svg" alt="logo")

        block content
