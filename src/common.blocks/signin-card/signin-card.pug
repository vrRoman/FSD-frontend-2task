include ../heading/heading
include ../button/button
include ../text-field/text-field


mixin signin-card
    .signin-card
        +heading({
            type: 'h1',
            text: 'Войти',
        })
        .signin-card__email
            +text-field({
                inputOptions: {
                    placeholder: 'Email',
                    type: 'email'
                }
            })
        .signin-card__password
            +text-field({
                inputOptions: {
                    type: 'password',
                    placeholder: 'Пароль'
                }
            })
        +button({
            text: 'Войти',
            link: 'landing-page.html',
            modifiers: {
                isLong: true,
                textColor: 'white',
            }
        })
        .signin-card__account-not-exists
            span Нет аккаунта на Toxin?
            +button({
                text: 'Создать',
                hasLink: false,
                modifiers: {
                    isSecondary: true
                }
            })
