include __input/text-field__input
include __arrow/text-field__arrow


mixin text-field({inputOptions = {}, arrowOptions, modifiers = {}} = {})
    -
        let className = 'text-field';

        if (modifiers.isFocused) {
            className += ' text-field_focused';
        }
        if (modifiers.isShort) {
            className += ' text-field_short';
        }
        if (modifiers.isBottomFlat) {
            className += ' text-field_flat-bottom';
        }

    div(class=className)
        +text-field__input(inputOptions)
        if (arrowOptions)
            +text-field__arrow(arrowOptions)
