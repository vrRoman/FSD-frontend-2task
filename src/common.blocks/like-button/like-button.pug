include __heart/like-button__heart
include __number/like-button__number


mixin like-button({likesNum = 0, isActive = false})
    -
        let className = 'like-button js-like-button';
        if (isActive) {
            className += ' like-button_active';
        }
    div(class=className)
        +like-button__heart
        +like-button__number(likesNum)
