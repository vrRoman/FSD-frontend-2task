include ../room-info/room-info
include ../rate-button/rate-button


mixin room-card({imagesSrc, hasSliderArrows = false, roomInfo, rating, numOfComments, link = 'room-details.html'})
    .room-card
        -
            let sliderClassName = 'room-card__slider js-room-card__slider';
            if (hasSliderArrows) {
                sliderClassName += ' room-card__slider_with-arrows';
            }
        div(class=sliderClassName)
            each src in imagesSrc
                img.room-card__img(
                    src=src,
                    alt='room-image',
                )
        a.room-card__content(href=link)
            .room-card__room-info
                +room-info({
                    ...roomInfo,
                    isNameSmall: true
                })
            .room-card__rating-and-comments
                +rate-button(rating)
                .room-card__comments= numOfComments
                    .room-card__comments-measure Отзывов
