include ../../rate-button/rate-button


mixin room-card({roomImagesSrc, roomInfo, numOfComments, arrows})
    .room-card(class=`${arrows ? 'room-card_with-arrows' : ''}`)
        .room-card__slider.js-room-card__slider
            each imgSrc in roomImagesSrc
                img.room-card__img(
                    src= imgSrc
                    alt='room-img'
                )
        .room-card__content
            .room-card__room-info
                .room-card__name
                    span.room-card__number-sign №&nbsp;
                    h2.room-card__number= roomInfo.number
                    if roomInfo.type
                        h3.room-card__type &nbsp;#{roomInfo.type}
                .room-card__price= roomInfo.price
                    span.room-card__price-measure &nbsp;в сутки

            .room-card__rating-and-comments
                .room-card__rating
                    +rate-button(roomInfo.rating)

                .room-card__comments= numOfComments
                    span.room-card__comments-measure &nbsp;Отзывов
