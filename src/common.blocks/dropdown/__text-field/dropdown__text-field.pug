include ../../text-field/text-field
include ../__title/dropdown__title


mixin dropdown__text-field({inputOptions, title = false, active = false})
    .dropdown__text-field
        if (title)
            +dropdown__title(title)
        +text-field({
            inputOptions: {
                ...inputOptions,
                maskedDate: false,
                readonly: true
            },
            arrowOptions: true,
            modifiers: {
                focused: active,
                flatBottom: active,
            }
        })
