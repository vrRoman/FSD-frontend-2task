include ../text-field/text-field


mixin dropdown({inputOptions = {}, popupMixinOptions = {}, popupHidden = true, title, isDouble = false, isShort = false} = {})
    -
        let className = 'dropdown';
        if (isDouble) {
            className += ' dropdown_double';
        }
        if (isShort) {
          className += ' dropdown_short';
        }

        if (isDouble) {
            if (!Array.isArray(title)) {
                title = [title, title];
            }
            if (!Array.isArray(inputOptions)) {
                inputOptions = [inputOptions, inputOptions];
            }
        }
    div(class=className)
        if (isDouble)
            .dropdown__text-field
                if (title[0])
                    .dropdown__title
                        +heading({
                            text: title[0],
                        })
                +text-field({
                    inputOptions: {
                        ...inputOptions[0],
                        isMaskedDate: false,
                        isReadonly: true
                    },
                    arrowOptions: {},
                    modifiers: {
                        isFocused: !popupHidden,
                        isBottomFlat: !popupHidden,
                    }
                })
            .dropdown__text-field
                if (title[1])
                    .dropdown__title
                        +heading({
                            text: title[1],
                        })
                +text-field({
                    inputOptions: {
                        ...inputOptions[1],
                        isMaskedDate: false,
                        isReadonly: true
                    },
                    arrowOptions: {},
                    modifiers: {
                        isFocused: !popupHidden,
                        isBottomFlat: !popupHidden,
                    }
                })
        else
            .dropdown__text-field
                if (title)
                    .dropdown__title
                        +heading({
                            text: title,
                        })
                +text-field({
                    inputOptions: {
                        ...inputOptions,
                        isMaskedDate: false,
                        isReadonly: true
                    },
                    arrowOptions: {},
                    modifiers: {
                        isFocused: !popupHidden,
                        isBottomFlat: !popupHidden,
                    }
                })

        .dropdown__popup(class=`${popupHidden ? 'dropdown__popup_hidden' : false}`)
            if (popupMixinOptions.name)
                +#{popupMixinOptions.name}(popupMixinOptions.params)
