mixin datepicker(double, title, value, className)
    .date-picker(class=`${double ? "date-picker_double" : "date-picker_single"} ` + className)
        .date-picker__date
            h3.date-picker__title= title
            .date-picker__text-field
                input(class=`${double ? "date-picker__input_double" : "date-picker__input_single"}`,
                    placeholder="ДД.ММ.ГГГГ",
                    value= value,
                    name=`${double ? "start-date" : "all-dates"}`)
                i.date-picker__arrow.material-icons expand_more
        if (double)
            .date-picker__date
                h3.date-picker__title= title
                .date-picker__text-field
                    input.date-picker__input_double(name="end-date", value="19.08.2019", placeholder="ДД.ММ.ГГГГ")
                    i.date-picker__arrow.material-icons expand_more
