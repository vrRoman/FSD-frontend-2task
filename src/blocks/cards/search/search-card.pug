include ../../date-picker/datepicker
include ../../dropdown/dropdown
include ../../button/button


mixin search-card
    .search-card
        h1.search-card__title Найдём номера под<br>ваши пожелания

        .search-card__date
            +datepicker(true, ['Прибытие', 'Выезд'], false)

        .search-card__guests
            +dropdown({
                text: 'Сколько гостей',
                title: 'Гости',
                popupParams: {
                    items: {
                        item1: {
                            name: 'Взрослые',
                            value: '0'
                        },
                        item2: {
                            name: 'Дети',
                            value: '0'
                        },
                        item3: {
                            name: 'Младенцы',
                            value: '0'
                        }
                    }
                }
            })

        .search-card__button
            +button('Подобрать номер', 'extended')



